<div class="container">

  <h4 class="font-weight-bold mb-3">
    <%=@customer.last_name %><%=@customer.first_name %>さんの会員情報編集
  </h4>

  <%=form_with model: @customer, url:admin_customer_path, method: :patch do |f| %>

    <div class="form-group row mx-auto">
      <p class="col-lg-2">会員ID</p>
      <%=@customer.id%>
    </div>

    <div class="form-group row mx-auto">
      <%=f.label :氏名,class: "col-lg-2"%>
      <%=f.text_field:last_name,class: "col-lg-2 form-control"%>
      <%=f.text_field:first_name,class: "col-lg-2 form-control ml-3"%>
    </div>

    <div class="form-group row mx-auto">
      <%=f.label :フリガナ,class: "col-lg-2"%>
      <%=f.text_field:last_name_kana,class: "col-lg-2 form-control" %>
      <%=f.text_field:first_name_kana,class: "col-lg-2 form-control ml-3" %>
    </div>

    <div class="form-group row mx-auto">
      <%=f.label :郵便番号,class: "col-lg-2"%>
      <%=f.text_field:postal_code,class: "col-lg-2 form-control"%>
    </div>

    <div class="form-group row mx-auto">
      <%=f.label :住所,class: "col-lg-2"%>
      <%=f.text_field:address,class: "col-lg-2 form-control"%>
    </div>

    <div class="form-group row mx-auto">
      <%=f.label :電話番号,class: "col-lg-2"%>
      <%=f.text_field:telephone_number,class: "col-lg-2 form-control"%>
    </div>

    <div class="form-group row mx-auto">
      <%=f.label :メールアドレス,class: "col-lg-2"%>
      <%=f.text_field:email,class: "col-lg-2 form-control"%>
    </div>

    <div class="form-group row mx-auto">
      <%=f.label :会員ステータス,class: "col-lg-2"%>
      <%= f.radio_button :is_deleted, :false, checked: true %>
      <%= f.label :is_deleted, "有効" %>
      <%= f.radio_button :is_deleted, :true,class: "ml-3"%>
      <%= f.label :is_deleted, "退会" %>
    </div>

    <div class="row mx-auto">
      <div class="col-lg-2"></div>
      <%=f.submit "変更を保存",class: "col-lg-2 btn btn-success" %>
    </div>

  <% end %>

</div>

