<div class="container">
  <h4 class="font-weight-bold">配送先登録/一覧</h4>

  <%=form_with model: @address,url: addresses_path  do |f| %>

    <div class="form-group row">
      <%=f.label :郵便番号（ハイフンなし）,class: "col-lg-3"%>
      <%=f.text_field:postal_code,class: "col-lg-2 form-control"%></br>
    </div>

    <div class="form-group row">
      <%=f.label :住所,class: "col-lg-3"%>
      <%=f.text_field:address,class: "col-lg-5 form-control"%></br>
    </div>

    <div class="form-group row">
      <%=f.label :宛名,class: "col-lg-3"%>
      <%=f.text_field:name,class: "col-lg-2 form-control"%>
      <div class="col-lg-4 text-right">
        <%=f.submit "新規登録",class: "btn btn-success" %>
      </div>
    </div>

  <% end %>

  <div class="row mx-auto">
    <table class="table table-bordered col-lg-8 mt-5">
      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
        <% @addresses.each do |address| %>
        <tr>
          <td><%=address.postal_code%></td>
          <td><%=address.address%></td>
          <td><%=address.name%></td>
          <td><%=link_to "編集する",edit_address_path(address.id),class: "btn btn-success"%>
          <%=link_to "削除する",address_path(address.id),method: :delete,class: "btn btn-danger"%></td>
        </tr>
        <% end %>
      </thead>
    </table>
  </div>

</div>

