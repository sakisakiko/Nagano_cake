<div class="container">
  <h4 class="font-weight-bold mb-3">ジャンル編集</h4>

  <%= form_with model:@genre, url:admin_genre_path, method: :PATCH  do |f| %>
    <div class="form-group row mx-auto">
      <%= f.label :ジャンル名,class: "col-lg-2" %>
      <%=f.text_field:name,placeholder: @genre.name,class: "col-lg-3 form-control" %>
      <%=f.submit "変更を保存",class: "col-lg-2 btn btn-success ml-5" %>
    </div>
  <% end %>

</div>
