<div class="container">



<div class="row">
<h2>新規会員登録</h2>
  <%= flash[:notice] %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
</div>

<div class="row">
<div class="col-lg-3">
<div class="label">
 <%= f.label :名前,class: "mb-3" %></br>
 <%= f.label :フリガナ,class: "mb-3"%></br>
 <%= f.label :メールアドレス,class: "mb-3"%></br>
 <%= f.label :郵便番号,class: "mb-3"%></br>
 <%= f.label :住所,class: "mb-3"%></br>
 <%= f.label :電話番号（ハイフンなし,class: "mb-3"%></br>
 <%= f.label :パスワード,class: "mb-3"%>
 <% if @minimum_password_length %>
 <em>(<%= @minimum_password_length %>文字以上)</em>
<% end %></br>
 <%= f.label :パスワード（確認用）,class: "mb-4"%></br>
</div>
</div><!--col-lg-3のdiv-->

<div class=" col-lg-6">
  <div class="field mb-3">  <!--名前-->
(姓)<%= f.text_field :last_name, autofocus: true, autocomplete: "last_name",class: "ml-3" %>
(名)<%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>

  <div class="field mb-2"> <!--フリガナ-->
 (セイ)<%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
 (メイ)<%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
  </div>

  <div class="field mb-2"> <!--メールアドレス-->
  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field mb-2"> <!--郵便番号-->
   <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

  <div class="field mb-2"> <!--住所-->
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field mb-2"> <!--電話番号-->
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number",class: "form-control" %>
  </div>

  <div class="field mb-2"> <!--パスワード-->
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field mb-3"> <!--パスワード（確認用）-->
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>



  <div class="actions  mb-3">
    <%= f.submit "新規登録",class: "btn btn-success" %>
  </div>
<% end %>
 </div><!--col-lg-6のdiv-->
</div><!--2つ目のrowのdiv-->

<div class="row">
<div class="link_sign_in">
  <p>既に登録済みの方</br>
  <%=link_to"こちら", new_customer_session_path %>からログインして下さい</p>
</div>
</div>

</div><!--containerのdiv-->


