<h2>注文履歴一覧</h2>
<table>
<thead>
<tr>
<th>購入日時</th>
<th>購入者</th>
<th>注文履歴</th>
<th>注文ステータス</th>
</tr>
</thead>
<tbody>
<% @orders.each do |order| %>
<tr>
<td><%=order.created_at.strftime('%Y/%m/%d %H:%M:%S')%></td>
<td><%=order.customer.last_name %><%=order.customer.first_name %></td>
<td><%#=order.order_details.amount %></td>
<td><%=order.status_i18n %></td>
</tr>
<% end %>
</tbody>
</table>
<%= paginate @orders %>
