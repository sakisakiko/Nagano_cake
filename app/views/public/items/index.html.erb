<div class="container">


<div class="row ">

 <%=render'public/homes/list',genres: @genres %><!--部分テンプレート-->

<div class="col-lg-1 mx-auto"></div>

<div class="col-lg-9">
<h4 class="font-weight-bold" >
商品一覧<span>(全<%=@items.count%>件)</span>
</h4>
<div class="d-flex flex-row flex-wrap ">
<% @items.each do |item| %>
<div class="flex-column flex-wrap ">
  <%=link_to item_path(item.id) do %><%=image_tag item.get_image(150,300),class: "mr-5"%><% end %>
  <p><%=link_to item_path(item.id) do %><%=item.name %><% end %></p>
  <p><span>¥</span><%= item.with_tax_price.to_s(:dalimited) %></p>
</div>
<% end %>
</div>
</div><!--col-lg-7のdiv-->
</div><!--rowのdiv-->


<div class="row mx-auto">
  <div class="col-lg-3"></div>
  <div class="col-lg-2 mx-auto">
<%= paginate @items%>
  </div>
</div>


</div>

