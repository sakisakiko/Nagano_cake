<div class="container">

  <div class="row">
    <h4 class="font-weight-bold mb-2">マイページ</h4>
  </div>

  <div class="row">
    <h5>登録情報</h5><%=link_to "編集する",information_edit_path,class: "btn btn-success mb-3 ml-3"%>
  </div>

  <div class="row mx-auto">
    <table class="table table-bordered col-lg-7">
      <tbody>
        <tr>
          <th>氏名</th>
          <td><%=@customer.last_name %><%=@customer.first_name %></td></br>
        </tr>
        <tr>
          <th>カナ</th>
          <td><%=@customer.last_name_kana %><%=@customer.first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%=@customer.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%=@customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%=@customer.telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%=@customer.email %></td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="row mx-auto">
    <h5 class="font-weight-bold col-lg-2">配送先</h5>
    <%=link_to "一覧を見る",addresses_path,class: "btn btn-primary" %>
  </div>

  <div class="row mx-auto">
    <h5 class="font-weight-bold col-lg-2 mt-2">注文履歴</h5>
    <%=link_to "一覧を見る",orders_path,class: "btn btn-primary mt-2" %>
  </div>

</div>

