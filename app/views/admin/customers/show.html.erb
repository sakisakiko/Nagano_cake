<div class="container">

  <h4 class="font-weight-bold mb-3">
    <%=@customer.last_name %><%=@customer.first_name %>さんの会員詳細
  </h4>
  
  <table class="table table-borderless">
    <tr>
      <td>会員ID</td>
      <td><%=@customer.id %></td>
    </tr>
    <tr>
      <td>氏名</td>
      <td><%=@customer.last_name %><%=@customer.first_name %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td><%=@customer.last_name_kana %><%=@customer.first_name_kana %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%=@customer.postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%=@customer.address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%=@customer.telephone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email  %> </td>
    </tr>
    <tr>
      <td>会員ステータス</td>
      <td><% if @customer.is_deleted == true %>
        　　<span class="font-weight-bold" style="color:#DDDDDD;">退会</span>
          <% else %>
          　<span class="text-success font-weight-bold">有効</span>
          <% end %>
      </td>
    </tr>
  </table>
  
  <div class="row mx-auto">
    <div class="col-lg-2"></div>
    <%=link_to "編集する",edit_admin_customer_path(@customer.id),class: "col-lg-2 btn btn-success"%>
  　<%=link_to"注文履歴一覧を見る",admin_top_path,class: "col-lg-2 btn btn-primary" %>
  </div>

</div>



