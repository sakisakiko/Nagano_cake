<div class="container">

  <h4 class="font-weight-bold">会員情報編集</h4>

  <%= form_with model: @customer,url: information_path do |f| %>
    <div class="form-group row">
      <%= f.label :氏名,class: "col-lg-2 " %>
    　<%= f.text_field :last_name ,class: "col-lg-2 form-control" %>
    　<%= f.text_field :first_name,class: "col-lg-2 form-control"%>
    </div>

    <div class="form-group row">
      <%= f.label :フリガナ,class: "col-lg-2 "%>
    　<%= f.text_field :last_name_kana,class: "col-lg-2 form-control" %>
    　<%= f.text_field :first_name_kana,class: "col-lg-2 form-control"%>
    </div>

    <div class="form-group row">
      <%= f.label :郵便番号,class: "col-lg-2"%>
      <%= f.text_field :postal_code,class: "col-lg-2 form-control ml-3"%>
    </div>

    <div class="form-group row">
      <%= f.label :住所,class: "col-lg-2"%>
      <%= f.text_field :address,class: "col-lg-6 form-control ml-3"%>
    </div>

    <div class="form-group row">
      <%= f.label :電話番号,class: "col-lg-2 "%>
      <%= f.text_field :telephone_number,class: "col-lg-2 form-control ml-3"%>
    </div>

    <div class="form-group row">
      <%= f.label :メールアドレス,class: "col-lg-2"%>
      <%= f.email_field :email,class: "col-lg-2 form-control ml-3" %>
    </div>

    <div class="row ">
      <div class="col-lg-2"></div>
      <%= f.submit "編集内容を保存",class: "col-lg-2 btn btn-success ml-3"%>
      <%=link_to "退会する",unsubscribe_path,class: "col-lg-1 btn btn-danger ml-5" %>
    </div>

  <% end %>

</div>

