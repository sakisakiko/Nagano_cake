<h2>注文情報入力画面</h2>
<%=form_with model: @order,url: confirm_path,method: :post do  |f| %>

 <%=f.label :支払方法 %></br>
 <%= f.radio_button :payment_method, :credit_card %>
 <%= f.label :payment_method,Order.payment_methods_i18n[:credit_card] %>
 <%= f.radio_button :payment_method, :transfer %>
 <%= f.label:payment_method,Order.payment_methods_i18n[:transfer] %></br>

 <%=f.label :お届け先 %></br>
 <%= f.radio_button :address, :customer_address,checked: true %>
 <%= f.label :address,"ご自身の住所" %></br>
 〒<%= f.label:address,current_customer.postal_code %> <%= f.label:address,current_customer.address%></br>
 <%= f.label:address,current_customer.last_name%> <%= f.label:address,current_customer.first_name %></br>

 <%= f.radio_button :address, :registered_address %>
 <%= f.label :address,"登録済住所から選択" %></br>
 <!--登録済住所プルダウン-->

  <%= f.radio_button :address, :new_address  %>
  <%= f.label :address,"新しいお届け先" %></br>
  <%=f.label :郵便番号（ハイフンなし） %>
  <%=f.text_field:postal_code %></br>
  <%=f.label :住所 %>
  <%=f.text_field:address %></br>
  <%=f.label:宛名 %>
  <%=f.text_field:name %></br>

  <%=f.submit "確認画面へ進む" %>

<% end %>