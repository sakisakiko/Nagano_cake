<h2>商品編集</h2>

<%=form_with model: @item, url:admin_item_path, method: :patch do |f| %>
  <%=f.label :商品画像 %>
  <%=f.file_field:image,accept: "image/:*" %></br>
  
  <%=f.label :商品名 %>
  <%=f.text_field:name %></br>
  
  <%=f.label :商品説明 %>
  <%=f.text_field:introduction,row: '5' %></br>
  
  <%=f.label :ジャンル %>
  <%=f.collection_select :genre_id,Genre.all, :id, :name, include_blank: "--選択してください--" %></br>
  
  <%=f.label :税抜価格 %>
  <%=f.text_field:price %><span>円</span></br>
  
  <%=f.label :販売ステータス %></br>
    <%= f.radio_button :is_active, :true, checked: true %>
    <%= f.label :is_active, "販売中" %>
    <%= f.radio_button :is_active, :false %>
    <%= f.label :is_active, "販売停止中" %></br>
  
  <%=f.submit "変更を保存" %>
  
<% end %>



