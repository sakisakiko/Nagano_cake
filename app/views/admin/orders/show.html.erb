<h2>注文履歴詳細</h2>

<table>
  <tr>
    <td>購入者</td>
    <td><%=@order.customer.last_name %><%=@order.customer.first_name %></td>
  </tr>

  <tr>
    <td>注文日</td>
    <td><%=@order.created_at.strftime('%Y/%m/%d %H:%M:%S' %></td>
  </tr>

  <tr>
    <td>配送先</td>
    <td>〒<%=@order.postal_code %><%=@order.address %></br><%=@order.name %></td>
  </tr>

  <tr>
    <td>支払方法</td>
    <td><%= @order.payment_methods_i18n%> </td>
  </tr>

  <tr>
    <td>注文ステータス</td>
    <%=form_with model: @order,url: admin_order(@order.id) do |f| %>
    <td><%= f.select :status, Order.statuses.keys.map{|k| [I18n.t("enums.order.status.#{k}"), k]} %>
    <%=f.submit "更新" %></td>
    <% end %>
  </tr>

</table>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th>制作ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @order_details.each do |order_detail| %>
    <tr>
      <td><%=order_detail.item.name %></td>
      <td><%=order_detail.price %></td>
      <td><%=order_detail.amount %></td>
      <td><%=order_detail.subtotal%></td>
      <%=form_with model: @order,url: admin_order(@order.id) do |f| %>
      <td><%= f.select :status, OrderDetail.statuses.keys.map{|k| [I18n.t("enums.order_detail.status.#{k}"), k]} %>
      <%=f.submit "更新" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

