<div class="container">

  <div class="row mx-auto">
    <div class="col-lg-11 mx-auto">
      <h4 class="font-weight-bold">注文履歴一覧</h4>
      <table class="table">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%=link_to admin_order_path(order.id) do %>
              <%=order.created_at.strftime('%Y/%m/%d %H:%M:%S')%>
              <% end %></td><!--購入日時※注文詳細へリンク-->
              <td><%=order.customer.last_name %><%=order.customer.first_name %></td><!--購入者-->

              <% order.order_details.each do |order_detail| %>
              <% @total_amount += order_detail.amount %><!--※注文個数の計算式-->
              <% end %>
              <td><%=@total_amount%></td><!--注文個数-->

              <td><%=order.status_i18n%></td><!--注文ステータス-->
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row mx-auto">
      <div class="col-lg-2 mx-auto">
        <%= paginate @orders %>
      </div>
  </div>

</div>