<div class="container">

  <div class="row mx-auto">
  <h4 class="font-weight-bold">管理者ログイン</h4>
  </div>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group row mx-auto">
      <%= f.label :メールアドレス,class: "col-lg-2 ml-auto" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "col-lg-4 form-control mx-auto" %>
    </div>
  
    <div class="form-group row mx-auto">
      <%= f.label :パスワード,class: "col-lg-2 ml-auto"%>
      <%= f.password_field :password, autocomplete: "current-password",class: "col-lg-4 form-control mx-auto" %>
    </div>
  
    <div class="row mx-auto">
      <div class="col-lg-2"></div>
      <%= f.submit "ログイン",class: "col-lg-2 btn btn-primary mx-auto" %>
    </div>
  <% end %>
  
  <%= render "admin/shared/links" %>

</div>
