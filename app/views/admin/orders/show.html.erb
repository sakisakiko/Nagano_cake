<div class="container">

  <h4 class="font-weight-bold mb-3">
  注文履歴詳細
  </h4>
  
  <table class="table table-borderless table-sm ">
    <tr>
      <td>購入者</td>
      <td><%=link_to admin_customer_path(@order.customer.id) do %>
      <%=@order.customer.last_name %><%=@order.customer.first_name %><% end %></td>
    </tr>
  
    <tr>
      <td>注文日</td>
      <td><%=@order.created_at.strftime('%Y/%m/%d')%></td>
    </tr>
  
      <tr>
      <td>配送先</td>
      <td>〒<%=@order.postal_code %><%=@order.address %></br><%=@order.name %></td>
    </tr>
  
    <tr>
      <td>支払方法</td>
      <td><%= @order.payment_method_i18n%> </td>
    </tr>
  
    <tr>
      <td>注文ステータス</td>
      <td><%=form_with model: @order,url: admin_order_path(@order.id) do |f| %>
      <%= f.select :status, Order.statuses.keys.map{|k| [I18n.t("enums.order.status.#{k}"), k]} %>
      <%=f.submit "更新",class: "btn btn-success" %>
      <%end %></td>
    </tr>
  </table>
  
  
  <div class="row">
    <table class="table table-sm  col-lg-6 mt-5">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th>制作ステータス</th>
        </tr>
      </thead>
      <tbody>
        <%@order.order_details.each do |order_detail| %>
        <tr>
          <td><%=order_detail.item.name %></td>
          <td><%=order_detail.price %></td>
          <td><%=order_detail.amount %></td>
          <td><%=order_detail.subtotal%></td>
          <td><%=form_with model: order_detail,url: admin_order_order_detail_path(@order.id,order_detail.id),method: :patch do |f| %>
          <%= f.select :status, OrderDetail.statuses.keys.map{|k| [I18n.t("enums.order_detail.status.#{k}"), k]} %>
          <%=f.submit "更新",class: "btn btn-success" %><%end %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  
    <table class="table table-borderless table-sm col-lg-3 ml-5 mt-5">
      <tbody>
        <tr>
          <th>商品合計</th>
          <td><%=@order.payment_price-@order.shipping_cost %></td>
        </tr>
        <tr>
          <th>送料</th>
          <td><%=@order.shipping_cost %></td>
        </tr>
        <tr>
          <th>請求金額合計</th>
          <td><%=@order.payment_price %></td>
        </tr>
      </tbody>
    </table>
  </div>

</div>