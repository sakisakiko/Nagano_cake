<div class="container">

<h4 class="font-weight-bold">商品一覧</h4>
<div class="text-right">
<%=link_to "＋",new_admin_item_path,class: "btn btn-ligh rounded-circle p-0",style: "width:2rem;height:2rem;"%>
</div>
<table class="table">
  <thead >
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
    <% @items.each do |item| %>
     <tr>
       <td><%=item.id %></td>
       <td><%=link_to admin_item_path(item.id) do %><%=item.name %><% end %></td>
       <td><%=item.price %></td>
       <td><%=item.genre.name%></td>
       <td><% if item.is_active == true %>
           <span class="text-success font-weight-bold">販売中</span>
           <% else %>
           <span class="font-weight-bold" style="color:#DDDDDD;">販売停止中</span>
           <% end %>
       </td>
     </tr>
    <% end %>
  </thead>
</table>

<div class="row mx-auto">
  <div class="col-lg-2 mx-auto">
<%= paginate @items %>
  </div>
</div>

</div>