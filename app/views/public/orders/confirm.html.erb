<h1>注文情報確認画面</h1>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%=image_tag cart_item.item.get_image(100,200) %><%=cart_item.item.name %></td>
      <td><%=cart_item.item.with_tax_price.to_s(:dalimited) %></td>
      <td><%=cart_item.amount %></td>
      <td><%=cart_item.subtotal %></td>
    </tr>
      <% @total_price +=  cart_item.subtotal  %>
    <% end %>
  </tbody>
  <tbody>
    <tr>
      <th>送料</th>
      <td><%=@order.shipping_cost %></td>
    </tr>
    <tr>
      <th>商品合計</th>
      <td><%=@total_price %></td>
    </tr>
    <tr>
      <th>請求金額</th>
      <td><%=@order.shipping_cost+@total_price %></td>
    </tr>
  </tbody>
</table>


<% @orders.each do |order| %>
<p>支払方法</p><%=Order.payment_methods_i18n%>
<% end %>


