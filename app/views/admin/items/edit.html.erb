<div class="container">
<h4 class="font-weight-bold mb-3">商品編集</h4>

<%=form_with model: @item, url:admin_item_path, method: :patch do |f| %>

<div class="form-group row mx-auto">
  <%=f.label :商品画像,class: "col-lg-2" %>
  <%=f.file_field:image,accept: "image/:*" %></br>
</div>

<div class="form-group row mx-auto">
  <%=f.label :商品名,class: "col-lg-2" %>
  <%=f.text_field:name,class: "col-lg-4 form-control" %></br>
</div>

<div class="form-group row mx-auto">
  <%=f.label :商品説明,class: "col-lg-2" %>
  <%=f.text_area:introduction,class: "col-lg-4 form-control",rows: "5" %></br>
</div>

<div class="form-group row mx-auto">
<%=f.label :ジャンル,class: "col-lg-2" %>
<%=f.collection_select :genre_id,Genre.all, :id, :name,{},class: 'col-lg-4 form-control' %>
</div>

<div class="form-group row mx-auto">
  <%=f.label :税抜価格,class: "col-lg-2"%>
  <%=f.text_field:price,class: "col-lg-2 form-control" %><span>円</span></br>
</div>

<div class="form-group row mx-auto">
  <%=f.label :販売ステータス,class: "col-lg-2" %></br>
    <%= f.radio_button :is_active, :true, checked: true %>
    <%= f.label :is_active, "販売中 " %>
    <%= f.radio_button :is_active, :false,class: "ml-3" %>
    <%= f.label :is_active, "販売停止中" %></br>
</div>

 <div class="row mx-auto">
  <div class="col-lg-2"></div>
  <%=f.submit "変更を保存",class: "col-lg-2 btn btn-success"  %>
</div>

<% end %>

</div>
