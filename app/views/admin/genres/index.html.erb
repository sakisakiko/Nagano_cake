<div class="container">

  <h4 class="font-weight-bold mb-3">ジャンル一覧・追加</h4>
  
  <%= form_with model: @genre, url:admin_genres_path, method: :POST do |f| %>
    <div class="form-group row mx-auto">
      <%= f.label :ジャンル名,class: "col-lg-2" %>
      <%=f.text_field:name,class: "col-lg-3 form-control" %>
      <%=f.submit "新規登録",class: "col-lg-2 btn btn-success ml-5" %>
    </div>
  <% end %>
  
  <table class="table col-lg-4 mt-5">
    <thead>
      <tr>
        <th>ジャンル</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%=genre.name %></td>
        <td><%=link_to "編集する",edit_admin_genre_path(genre.id),class: " btn btn-success" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

</div>