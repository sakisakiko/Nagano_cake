<h2>マイページ</h2>

<table>
  <thead><tr>登録情報<%=link_to "編集する",information_edit_path %></tr></thead>
  <tbody>
    <tr>
      <th>氏名</th>
      <td><%=@customer.last_name %><%=@customer.first_name %></td></br>
    </tr>
    <tr>
      <th>カナ</th>
      <td><%=@customer.last_name_kana %><%=@customer.first_name_kana %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%=@customer.postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%=@customer.address %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%=@customer.telephone_number %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%=@customer.email %></td>
    </tr>
  </tbody>
</table>

<p>配送先</p><%=link_to "一覧を見る",addresses_path %>
<p>注文履歴</p><%=link_to "一覧を見る",orders_path %>

