<div class="container">
<h4 class="font-weight-bold">配送先編集</h4>

<%=form_with model: @address, url: address_path(@address.id) do |f|  %>
<div class="form-group row">
<%=f.label :郵便番号（ハイフンなし）,class: "col-lg-3"%>
<%=f.text_field:postal_code,class: "col-lg-2 form-control" %>
</div>

<div class="form-group row">
<%=f.label :住所,class: "col-lg-3"%>
<%=f.text_field:address,class: "col-lg-5 form-control" %>
</div>

<div class="form-group row">
<%=f.label :宛名,class: "col-lg-3"%>
<%=f.text_field:name,class: "col-lg-2 form-control" %>
<div class="col-lg-4 text-right">
<%=f.submit "変更内容を保存",class: "btn btn-success" %>
</div>
</div>

<% end %>

</div>
