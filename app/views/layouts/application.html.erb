<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <header>
    <% if customer_signed_in? %>
      <ul>
        <li><%=link_to my_page_path do %>マイページ<% end %></li>
        <li><%=link_to items_path  do %>商品一覧<% end %></li>
        <li><%=link_to confirm_path do %>カート<% end %></li>
        <li><%=link_to destroy_customer_session_path,method: :delete do %>ログアウト<% end %></li>
      </ul>
    <% elsif admin_signed_in? %>
      <ul>
        <li><%=link_to admin_items_path do %>商品一覧<% end %></li>
        <li><%=link_to admin_customers_path do %>会員一覧<% end %></li>
        <li><%#=link_to admin_orders_path do %>注文履歴一覧<%# end %></li>　
        <li><%=link_to admin_genres_path do %>ジャンル一覧<% end %></li>
        <li><%=link_to destroy_admin_session_path,method: :delete do %>ログアウト<% end %></li>
      </ul>
    <% else %>
       <ul>
        <li><%=link_to about_path do %>About<% end %></li>
        <li><%=link_to items_path do %>商品一覧<% end %></li>
        <li><%=link_to new_customer_registration_path do %>新規登録<% end %></li>
        <li><%=link_to new_customer_session_path do %>ログイン<% end %></li>
      </ul>   
    <% end %>
  </header>

  <body>
    <%= yield %>
  </body>
  
  <footer></footer>
</html>
