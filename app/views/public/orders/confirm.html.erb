<h1>注文情報確認画面</h1>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%=image_tag cart_item.item.get_image(100,200) %><%=cart_item.item.name %></td>
      <td><%=cart_item.item.with_tax_price.to_s(:dalimited) %></td>
      <td><%=cart_item.amount %></td>
      <td><%=cart_item.subtotal %></td>
    </tr>
      <% @order.payment_price +=  cart_item.subtotal  %>
    <% end %>
  </tbody>
  <tbody>
    <tr>
      <th>送料</th>
      <td><%=@order.shipping_cost %></td>
    </tr>
    <tr>
      <th>商品合計</th>
      <td><%=@order.payment_price  %></td>
    </tr>
    <tr>
      <th>請求金額</th>
      <td><%=@order.payment_price  + @order.shipping_cost %></td>
    </tr>
  </tbody>
</table>


<table>
  <tr>
    <th>支払方法</th>
    <td><%=@order.payment_method_i18n%></td>
  </tr>
  <tr>
    <th>お届け先</th>
    <td><%=@order.postal_code %><%=@order.address %></br><%=@order.name %></td>
  </tr>
</table>

<%=form_with model: @order_deital,url: orders_path do |f| %>
  <%= f.hidden_field :cart_item_id, :value => @cart_item.id %>
  <%= f.hidden_field :amount, :value => @cart_item.amount %>
  <%= f.hidden_field :price, :value => @cart_item.item.with_tax_price.to_s(:dalimited) %>
  <%=f.submit "注文を確定する" %>
<% end %>







