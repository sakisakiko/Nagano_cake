<div class="container">
<h2>注文情報入力画面</h2>
<%=form_with model: @order,url: confirm_path do  |f| %>

<div class="row mx-auto">
 <h5 class="font-weight-bold">支払方法</h5>
</div>

 <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
 <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %></br>


 <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
 <%= f.label:payment_method,Order.payment_methods_i18n[:transfer] %></br>

<div class="row mx-auto">
<h5 class="font-weight-bold">お届け先</h5>
</div>


 <%= f.radio_button :select_address,1,checked: true %>
 <%= f.label :select_address,"ご自身の住所" %></br>
 <p class="ml-3">〒<%= f.label:select_address,current_customer.postal_code %> <%= f.label:address,current_customer.address%></br>
 <%= f.label:select_address,current_customer.last_name%> <%= f.label:address,current_customer.first_name %></br></p>



 <%= f.radio_button :select_address,2 %>
 <%= f.label :select_address,"登録済住所から選択" %></br>
 <div class="row mx-auto">
 <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display),class: "col-lg-7 form-control"%>
 </br>
 </div>


  <%= f.radio_button :select_address,3  %>
  <%= f.label :select_address,"新しいお届け先" %></br>

  <div class="row mx-auto">
  <%=f.label :郵便番号（ハイフンなし）,style: "font-size:14px",class: "col-lg-3" %>
  <%=f.text_field:postal_code,class: "col-lg-3 form-control form-control-sm" %></br>
  </div>

  <div class="row mx-auto">
  <%=f.label :住所,style: "font-size:14px",class: "col-lg-3"  %>
  <%=f.text_field:address,class: "col-lg-7 mt-2 form-control form-control-sm" %></br>
  </div>

  <div class="row mx-auto">
  <%=f.label:宛名,style: "font-size:14px",class: "col-lg-3"  %>
  <%=f.text_field:name,class: "col-lg-3 mt-2 form-control form-control-sm" %></br>
  </div>

  <div class="row mx-auto">
   <div class="col-lg-6 mx-auto">
  <%=f.submit "確認画面へ進む",class: "btn btn-primary mt-3" %>
   </div>
  </div>

<% end %>
</div>