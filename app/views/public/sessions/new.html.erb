<div class="container">

<div class="row mx-auto">
<h2 class="col-lg-5 font-weight-bold ml-3 mb-4 mt-5">ログイン</h2>
</div>

<div class="row mx-auto">
<p class="col-lg-5 ml-3">会員の方はこちらからログイン</p>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-group row mx-auto">
    <%= f.label :メールアドレス,class: "col-lg-2 ml-5"%>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: "col-lg-5 form-control mx-auto" %>
  </div>

  <div class="form-group row mx-auto ">
    <%= f.label :パスワード, class: "col-lg-2 ml-5"%>
    <%= f.password_field :password, autocomplete: "current-password",class: "col-lg-5 form-control mx-auto"%>
  </div>

  <div class="form-group row mx-auto">
    <%= f.submit "ログイン",class: "col-lg-2 btn btn-primary mx-auto mt-3" %>
  </div>
<% end %>

<div class="row mx-auto">
  <p class="ml-4">会員登録がお済みでない方</p>
</div>

<div class="row mx-auto">
<p class="ml-5 mb-5"><%=link_to"こちら", new_customer_registration_path %>から新規登録を行ってください</p>
</div>

</div>
